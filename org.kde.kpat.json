{
    "id": "org.kde.kpat",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "kpat",
    "rename-icon": "kpat",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland"
    ],

    "modules": [
        {
            "name": "libkdegames",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.04.0/src/libkdegames-20.04.0.tar.xz",
                    "sha256": "798283435dd7f8979ed1456b0e98dea99c9eec4eede24806d736e7682a0c07a5"
                }
            ]
        },
        {
            "name": "freecell-solver",
            "buildsystem": "cmake",
            "config-opts": [ "-DFCS_WITH_TEST_SUITE=OFF", "-DFCS_BUILD_DOCS=OFF" ],
            "build-options" : {
                "env": {
                    "PERLLIB": "/app/lib/perl5/site_perl/5.30.0:/app/lib/perl5/site_perl/5.30.0/arch"
                }
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://fc-solve.shlomifish.org/downloads/fc-solve/freecell-solver-5.22.1.tar.xz",
                    "sha256": "7603b161adb39dda932c734c1008c6e000b40ad69096c239cdf552c9f0b9591b"
                }
            ],
            "modules": [
                {
                    "name": "rinutils",
                    "buildsystem": "cmake",
                    "config-opts": [ "-DWITH_TEST_SUITE=OFF" ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/shlomif/rinutils/releases/download/0.4.0/rinutils-0.4.0.tar.xz",
                            "sha256": "ccabff71b0ac7de73036cf9613406ffff760daf14e0c6f8443fd299154bfd38a"
                        }
                    ]
                },
                {
                    "name": "random2",
                    "buildsystem": "simple",
                    "build-commands": [
                        "pip3 install --prefix=/app --no-deps ."
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://files.pythonhosted.org/packages/ee/b5/5aca5217501fbd06b1e5aed6d5986baa0da5380880e6bb6f421ed18e3a32/random2-1.0.1.zip",
                            "sha256": "34ad30aac341039872401595df9ab2c9dc36d0b7c077db1cea9ade430ed1c007"
                        }
                    ]
                },
                {
                    "name": "pbr",
                    "buildsystem": "simple",
                    "build-commands": [
                        "pip3 install --prefix=/app --no-deps ."
                    ],
                    "sources": [ { "type": "git", "url": "https://github.com/openstack/pbr.git", "tag": "5.4.4" } ]
                },
                {
                    "name": "pysol_cards",
                    "buildsystem": "simple",
                    "build-commands": [
                        "pip3 install --prefix=/app --no-deps ."
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://pypi.io/packages/source/p/pysol_cards/pysol_cards-0.8.9.tar.gz",
                            "sha256": "3485e681a2cbec6241359cb4170889cac0919571ca622a4eb10750d2a34f5c05"
                        }
                    ]
                },
                {
                    "name": "perl-modules",
                    "buildsystem": "simple",
                    "build-commands": [
                        "echo 'this is a workaround for a flatpak+perl limitation'",
                        "tar xhf Path-Tiny-0.112.tar.gz",
                        "tar xhf Template-Toolkit-3.008.tar.gz",
                        "cd Path-Tiny-0.112 && perl Makefile.PL PREFIX=/app && make && make install",
                        "cd Template-Toolkit-3.008 && perl Makefile.PL PREFIX=/app && make && make install",
                        "ln -s /app/lib/perl5/site_perl/5.30.0/$(basename `ls -d /usr/lib/perl5/5.30.0/*-linux`) /app/lib/perl5/site_perl/5.30.0/arch"
                    ],
                    "post-install": [
                        "chmod -R u+w /app/lib/perl5/site_perl"
                    ],
                    "sources": [
                        {
                            "type": "file",
                            "url": "https://cpan.metacpan.org/authors/id/D/DA/DAGOLDEN/Path-Tiny-0.112.tar.gz",
                            "sha256": "813df2d140c65f795daefd8eca18e61194ecac7050c5406a069db86dea31cc3a"
                        },
                        {
                            "type": "file",
                            "url": "https://search.cpan.org/CPAN/authors/id/A/AT/ATOOMIC/Template-Toolkit-3.008.tar.gz",
                            "sha256": "52400f68bef6731b0fca00e3438ed835b29ab9fec72a404866dee8fc139da692"
                        }
                    ]
                }
            ]
        },
        {
            "name": "kpat",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.04.0/src/kpat-20.04.0.tar.xz",
                    "sha256": "f5aced42e9521923d8b63df6e3cf577faba4efab27d2dc37b70e320e1d13c4e5"
                }
            ]
        }
    ]
}
